import yfinance as yf
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
!pip install Ta-Lib
import talib as ta


Ticker = 'TSLA'

#MA Constants
Window_Slow = 100
Window_Fast = 150
#RSI Constants
Period = 14
Overbought = 70
Oversold = 30
Lookback = 5000

def get_data():
    df = yf.download(Ticker, period='max', interval='1d')
    df.columns = df.columns.get_level_values(0)
    return df.iloc[-Lookback:,:]

def add_Indicators(df):
    df[f'MA_{Window_Slow}'] = ta.MA(df['Close'], Window_Slow)
    df[f'MA_{Window_Fast}'] = ta.MA(df['Close'], Window_Fast)
    df['RSI'] = ta.RSI(df['Close'], Period)

    return df.dropna()


def add_Strategies(df):
    #MA strategy
    df['MA_Strategy'] = np.where(df[f'MA_{Window_Slow}'] > df[f'MA_{Window_Fast}'], 1, -1)
    df['MA_Strategy'] = df['MA_Strategy'].shift(1)
    
    #RSI Strategy
    df['RSI_Strategy'] = np.where(df['RSI'] > Overbought, -1,
                           np.where(df['RSI'] < Oversold, 1, 0))
    df['RSI_Strategy'] = df['RSI_Strategy'].shift(1)
    
    #Full Strategy 
    df['Full_Strategy'] = np.where(df['MA_Strategy'] + df['RSI_Strategy'] == 2, 1,
                            np.where(df['MA_Strategy'] + df['RSI_Strategy'] == -2, -1, 0)) 
    return df.dropna()


def Test_Strategy(df):
    df['Asset_Cumulative'] = np.cumprod(1 + df['Close'].pct_change()) - 1
    df['Strategy_Cumulative'] = np.cumprod(1 + df['Close'].pct_change() * df['Full_Strategy']) - 1
    return df
  
def plots(df):
    # --- Plot MA ---
    plt.figure(figsize=(12,6))
    plt.plot(df['Close'], label=f'{Ticker} Price', alpha=0.7)
    plt.plot(df[f'MA_{Window_Slow}'], label=f'MA {Window_Slow}')
    plt.plot(df[f'MA_{Window_Fast}'], label=f'MA {Window_Fast}')
    plt.title(f'{Ticker} Price with Moving Averages')
    plt.legend()
    plt.show()

    # --- Plot RSI ---
    plt.figure(figsize=(12,3))
    plt.plot(df['RSI'], label="RSI", color="purple")
    plt.axhline(Overbought, color='red', linestyle='--')
    plt.axhline(Oversold, color='green', linestyle='--')
    plt.title("RSI Indicator")
    plt.legend()
    plt.show()

    # --- Plot Returns---
    plt.figure(figsize=(12,6))
    plt.plot(df['Asset_Cumulative'], label="Buy & Hold", color="blue")
    plt.plot(df['Strategy_Cumulative'], label="Strategy", color="orange")
    plt.title("Cumulative Returns")
    plt.legend()
    plt.show()

    return df.dropna()

def main():
    df = get_data()
    df = add_Indicators(df)
    df = add_Strategies(df)
    df = Test_Strategy(df)
    df = plots(df)
    return df

df = main()
