import yfinance as yf
import numpy as np
import matplotlib.pyplot as plt
import pandas as pd

Ticker = 'SPY'

RSI_length = 14
OVERBOUGHT = 70
OVERSOLD = 30 
Lookback = 1000

def get_data():
    df = yf.download(Ticker, period= 'max')
    df.columns = df.columns.get_level_values(0)
    return df.iloc[-Lookback:,:]

def add_RSI(df):
    df['delta'] = df['Close'].diff()

    df['gain'] = np.where(df['delta'] > 0, df['delta'], 0)
    df['loss'] = np.where(df['delta'] < 0, - df['delta'], 0)

    avg_gain = df['gain'].rolling(RSI_length).mean()
    avg_loss = df['loss'].rolling(RSI_length).mean()

    rs = avg_gain / avg_loss

    RSI = 100 - (100/(1+rs))
    
    df['RSI'] = RSI

    plt.plot(df['RSI'])
    plt.axhline(OVERBOUGHT, color = 'red')
    plt.axhline(OVERSOLD, color = 'green')   
    plt.title('Relative Strength Index Values') 
    return df.dropna() 

def add_strategy(df):
    df['Strategy']= np.where(df['RSI'] > OVERBOUGHT, -1, # If RSI is above overbought threshold → Sell signal
                    np.where(df['RSI'] < OVERSOLD, 1, 0) # If RSI is below oversold threshold → Buy signal
                    )
    df['Strategy'] = df['Strategy'].shift(1) 
    return df.dropna()

def test_strategy(df):
    df['asset_cumulative'] = np.cumprod(1 + df['Close'].pct_change()) - 1
    df['Strategy_cumulative'] = np.cumprod(1 + df['Close'].pct_change()*df['Strategy']) - 1

    plt.figure()
    plt.plot(df['asset_cumulative'])
    plt.plot(df['Strategy_cumulative'])
    plt.legend ([f'{Ticker} return', 'RSI Strategy return'])
    plt.title('Cumulative return of Buy and hold vs. RSI Strategy')
    return df

def main():
    df = get_data()
    df = add_RSI(df)
    df = add_strategy(df)
    df = test_strategy(df)

    return df

main()
