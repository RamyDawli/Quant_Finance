import yfinance as yf
import numpy as np
import matplotlib.pyplot as plt
import pandas as pd

Ticker ='SPY'

MACD9 = 9
MACD12 = 12
MACD26 = 26

Lookback = 10000

def get_data():
    df = yf.download(Ticker, period='max')
    df.columns = df.columns.get_level_values(0)
    return df.iloc[-Lookback:,:]

def add_MACDs(df):
    df[f'EMA{12}'] = df['Close'].ewm(span = MACD12, adjust=False).mean()
    df[f'EMA{26}'] = df['Close'].ewm(span = MACD26, adjust=False).mean()

    #MACD line, the difference between EMA12 and EMA26
    df['MACD_LINE'] = df[f'EMA{12}'] - df[f'EMA{26}']

    #MACD signal, 9 period moving average of MACD line 
    df['Signal_Line'] = df['MACD_LINE'].ewm(span=MACD9, adjust=False).mean()

    #MACD histogram
    df['MACD_Histo'] = df['MACD_LINE'] - df['Signal_Line']

    plt.bar(x=range(len(df)), height= df['MACD_Histo'])
    plt.title(f'{MACD12}-{MACD26}-{MACD9} MACD Histogram')
    return df

def add_strategy(df):
    df['Strategy'] = np.where(df['MACD_Histo'] > 0, 1, -1)
    df['Strategy'] = df['Strategy'].shift(1)
    return df

def test_strategy(df):
    df['asset_cumulative'] = np.cumprod(1 + df['Close'].pct_change())-1
    df['Strategy_cumulative'] = np.cumprod(1 + df['Close'].pct_change()* df['Strategy'])-1 
    
    plt.figure()
    plt.plot(df['asset_cumulative'])
    plt.plot(df['Strategy_cumulative'])
    plt.legend ([f'{Ticker} return', f'{MACD12}-{MACD26}-{MACD9} MACD Strategy return'])
    plt.title('Cumulative return of Buy and hold vs. MACD Strategy')
    return df


def main(): 
    df = get_data()
    df = add_MACDs(df)
    df= add_strategy(df)
    df = test_strategy(df)
    return df

df = main()
