import yfinance as yf
import matplotlib.pyplot as plt
import numpy as np

Ticker = 'TSLA'
SMA_Period = 20
Lookback = 3000

def get_data():
    df= yf.download(Ticker, period='max')
    df.columns = df.columns.get_level_values(0)

    return df.iloc[-Lookback:,:] 


def add_BB(df):

    df['Middle_Band'] = df['Close'].rolling(SMA_Period).mean()
    df['Upper_Band']  = df['Middle_Band'] + 2 * df['Close'].rolling(SMA_Period).std()
    df['Lower_Band']  = df['Middle_Band'] - 2 * df['Close'].rolling(SMA_Period).std()
    
    plt.plot(df['Close'], color = 'blue')
    plt.plot(df['Upper_Band'], color = 'orange')
    plt.plot(df['Lower_Band'], color = 'orange')
    plt.title(f'{Ticker} Bollinger Bands. SMA-Interval:{SMA_Period}')

    return df.dropna()

def add_strategy(df):
    df['Strategy'] = np.where(df['Close']> df['Upper_Band'], -1,
                     np.where(df['Close']< df['Lower_Band'], 1, 0))

    df['Strategy'] = df['Strategy'].shift(1)
    return df

def test_strategy(df):
    df['asset_cumulative'] = np.cumprod(1 + df['Close'].pct_change()) - 1
    df['Strategy_cumulative'] = np.cumprod(1 + df['Close'].pct_change()*df['Strategy']) - 1

    plt.figure()
    plt.plot(df['asset_cumulative'])
    plt.plot(df['Strategy_cumulative'])
    plt.legend ([f'{Ticker} return', 'BB Strategy return'])
    plt.title('Cumulative return of Buy and hold vs. Bollinger Strategy')
    return df


def main():
    df = get_data()
    df = add_BB(df)
    df = add_strategy(df)
    df = test_strategy(df)
    return df

df = main()
df
