import yfinance as yf
import numpy as np
import matplotlib.pyplot as plt

Ticker = 'TSM'
Window = 14
OVERBOUGHT = 80 
OVERSOLD = 20 
Lookback = 10000

def get_data():
    df = yf.download(Ticker, period= 'max')
    df.columns = df.columns.get_level_values(0)
    return df.iloc[-Lookback:,:]


def add_MFI(df):
    df['Typical_Price'] = (df['High'] + df['Low'] + df['Close'])/3 
    df['Raw_Money_Flow'] = df['Typical_Price'] * df['Volume']

    df['PMF'] = np.where(df['Typical_Price'].diff() > 0, df['Raw_Money_Flow'], 0)
    df['NMF'] = np.where(df['Typical_Price'].diff() < 0, df['Raw_Money_Flow'], 0)

    PMF_sum = df['PMF'].rolling(Window).sum()
    NMF_sum = df['NMF'].rolling(Window).sum()

    MR = PMF_sum / NMF_sum

    df['MFI'] = 100 - (100/(1+MR)) 
    plt.plot(df['MFI'])
    plt.axhline(OVERBOUGHT, color = 'red')
    plt.axhline(OVERSOLD, color = 'green')   
    plt.title('Money Flow Index Values')
    return df.dropna()

def add_strategy(df):
    df['Strategy']= np.where(df['MFI'] > OVERBOUGHT, -1, # If MSI is above overbought threshold → Sell signal
                    np.where(df['MFI'] < OVERSOLD, 1, 0) # If MSI is below oversold threshold → Buy signal
                    )
    df['Strategy'] = df['Strategy'].shift(1) 
    return df.dropna()

def test_strategy(df):
    df['asset_cumulative'] = np.cumprod(1 + df['Close'].pct_change()) - 1
    df['Strategy_cumulative'] = np.cumprod(1 + df['Close'].pct_change()*df['Strategy']) - 1

    plt.figure()
    plt.plot(df['asset_cumulative'])
    plt.plot(df['Strategy_cumulative'])
    plt.legend ([f'{Ticker} return', 'MFI Strategy return'])
    plt.title('Cumulative return of Buy and hold vs. MFI Strategy')
    return df

def main():
    df = get_data()
    df = add_MFI(df)
    df = add_strategy(df)
    df = test_strategy(df)
    return df

df= main()
