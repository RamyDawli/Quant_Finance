import yfinance as yf
import matplotlib.pyplot as plt
import numpy as np

Ticker = 'SPY'
Window_short = 20
Window_long = 50
Lookback = 1000

def get_data ():
    df = yf.download(Ticker, period= '1d', interval='1h')
    df.columns = df.columns.get_level_values(0)
    return df.iloc[-Lookback:,:]

def add_MAs (df):
    df[f'MA_{Window_short}'] = df['Close'].rolling(Window_short).mean()
    df[f'MA_{Window_long}'] = df['Close'].rolling(Window_long).mean()

    plt.plot(df['Close'])
    plt.plot(df[f'MA_{Window_short}'])
    plt.plot(df[f'MA_{Window_long}'])
    plt.legend(['Close', f'MA_{Window_short}', f'MA_{Window_long}'])
    plt.title('Moving Average Corssover')
    return df.dropna()

def add_MA_strategy(df):
    df['Strategy'] = np.where(df['MA_'f'{Window_short}'] > df['MA_'f'{Window_long}'], 1 , -1)
    df['Strategy'] = df['Strategy'].shift(1)
    return df

def test_strategy(df):
    df['asset_cumulative'] = np.cumprod(1 + df['Close'].pct_change()) - 1
    df['Strategy_return'] = np.cumprod(1 + df['Close'].pct_change()*df['Strategy']) - 1 
    
    plt.figure()
    plt.plot(df['asset_cumulative'])
    plt.plot(df['Strategy_return'])
    plt.legend ([f'{Ticker} return', f'{Window_short}-{Window_long} Crossover Strategy return'])
    plt.title(f'Cumulative return of Buy and hold vs. {Window_short}-{Window_long} MA Strategy')
    return df.dropna()

def main():
    df = get_data ()
    df = add_MAs (df)
    df = add_MA_strategy(df)
    df = test_strategy (df) 
    
    return df

df = main()
